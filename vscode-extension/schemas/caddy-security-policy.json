{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://asd-engineering.github.io/asd-caddy-api-client/schemas/caddy-security-policy.json",
  "title": "Caddy Security Policy",
  "description": "caddy-security authorization policy (gatekeeper) configuration",
  "$ref": "#/definitions/caddy-security-policy",
  "definitions": {
    "caddy-security-policy": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "access_lists": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "action": {
                "type": "string",
                "enum": ["allow", "deny"]
              },
              "claim": {
                "type": "string"
              },
              "values": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              }
            },
            "additionalProperties": false
          }
        },
        "crypto_key": {
          "type": "object",
          "properties": {
            "token_name": {
              "type": "string"
            },
            "source": {
              "type": "string"
            }
          },
          "additionalProperties": false
        },
        "bypass": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "required": ["name"],
      "additionalProperties": false
    }
  }
}
