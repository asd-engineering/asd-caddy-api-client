{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://asd-engineering.github.io/asd-caddy-api-client/schemas/caddy-security-oauth2-provider.json",
  "title": "Caddy Security Oauth2 Provider",
  "description": "caddy-security OAuth2 identity provider configuration",
  "$ref": "#/definitions/caddy-security-oauth2-provider",
  "definitions": {
    "caddy-security-oauth2-provider": {
      "type": "object",
      "properties": {
        "driver": {
          "type": "string",
          "const": "oauth2"
        },
        "realm": {
          "type": "string"
        },
        "provider": {
          "type": "string"
        },
        "client_id": {
          "type": "string"
        },
        "client_secret": {
          "type": "string"
        },
        "scopes": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "required": ["driver"],
      "additionalProperties": false
    }
  }
}
