{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://asd-engineering.github.io/asd-caddy-api-client/schemas/caddy-handler-authentication.json",
  "title": "Caddy Handler Authentication",
  "description": "Caddy authentication handler configuration",
  "$ref": "#/definitions/caddy-handler-authentication",
  "definitions": {
    "caddy-handler-authentication": {
      "type": "object",
      "properties": {
        "handler": {
          "type": "string",
          "const": "authentication"
        },
        "providers": {
          "type": "object",
          "properties": {
            "http_basic": {
              "type": "object",
              "properties": {
                "accounts": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "username": {
                        "type": "string"
                      },
                      "password": {
                        "type": "string"
                      }
                    },
                    "required": ["username", "password"],
                    "additionalProperties": false
                  }
                },
                "realm": {
                  "type": "string"
                },
                "hash": {
                  "type": "object",
                  "properties": {
                    "algorithm": {
                      "type": "string"
                    }
                  },
                  "additionalProperties": false
                }
              },
              "additionalProperties": false
            }
          },
          "additionalProperties": false
        }
      },
      "required": ["handler"],
      "additionalProperties": false
    }
  }
}
