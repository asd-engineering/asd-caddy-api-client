{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://asd-engineering.github.io/asd-caddy-api-client/schemas/caddy-security-app.json",
  "title": "Caddy Security App",
  "description": "Complete caddy-security app configuration for /config/apps/security",
  "$ref": "#/definitions/caddy-security-app",
  "definitions": {
    "caddy-security-app": {
      "type": "object",
      "properties": {
        "config": {
          "type": "object",
          "properties": {
            "authentication_portals": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "ui": {
                    "type": "object",
                    "properties": {
                      "theme": {
                        "type": "string"
                      },
                      "logo_url": {
                        "type": "string"
                      },
                      "custom_css": {
                        "type": "string"
                      }
                    },
                    "additionalProperties": false
                  },
                  "cookie": {
                    "type": "object",
                    "properties": {
                      "domain": {
                        "type": "string"
                      },
                      "path": {
                        "type": "string"
                      },
                      "lifetime": {
                        "type": "string"
                      }
                    },
                    "additionalProperties": false
                  },
                  "identity_stores": {
                    "type": "array",
                    "items": {
                      "type": "string"
                    }
                  },
                  "identity_providers": {
                    "type": "array",
                    "items": {
                      "type": "string"
                    }
                  },
                  "transform_user": {
                    "type": "object",
                    "additionalProperties": {}
                  }
                },
                "required": ["name"],
                "additionalProperties": false
              }
            },
            "authorization_policies": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "access_lists": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "properties": {
                        "action": {
                          "type": "string",
                          "enum": ["allow", "deny"]
                        },
                        "claim": {
                          "type": "string"
                        },
                        "values": {
                          "type": "array",
                          "items": {
                            "type": "string"
                          }
                        }
                      },
                      "additionalProperties": false
                    }
                  },
                  "crypto_key": {
                    "type": "object",
                    "properties": {
                      "token_name": {
                        "type": "string"
                      },
                      "source": {
                        "type": "string"
                      }
                    },
                    "additionalProperties": false
                  },
                  "bypass": {
                    "type": "array",
                    "items": {
                      "type": "string"
                    }
                  }
                },
                "required": ["name"],
                "additionalProperties": false
              }
            },
            "credentials": {
              "type": "object",
              "properties": {
                "generic": {
                  "type": "object",
                  "additionalProperties": {}
                }
              },
              "additionalProperties": false
            },
            "identity_stores": {
              "type": "array",
              "items": {
                "anyOf": [
                  {
                    "type": "object",
                    "properties": {
                      "driver": {
                        "type": "string",
                        "const": "local"
                      },
                      "realm": {
                        "type": "string"
                      },
                      "path": {
                        "type": "string"
                      }
                    },
                    "required": ["driver", "path"],
                    "additionalProperties": false
                  },
                  {
                    "type": "object",
                    "properties": {
                      "driver": {
                        "type": "string",
                        "const": "ldap"
                      },
                      "realm": {
                        "type": "string"
                      },
                      "servers": {
                        "type": "array",
                        "items": {
                          "type": "object",
                          "properties": {
                            "address": {
                              "type": "string"
                            },
                            "port": {
                              "type": "integer",
                              "exclusiveMinimum": 0,
                              "maximum": 65535
                            }
                          },
                          "required": ["address"],
                          "additionalProperties": false
                        }
                      },
                      "bind_dn": {
                        "type": "string"
                      },
                      "bind_password": {
                        "type": "string"
                      },
                      "search_base_dn": {
                        "type": "string"
                      },
                      "search_filter": {
                        "type": "string"
                      }
                    },
                    "required": ["driver"],
                    "additionalProperties": false
                  },
                  {
                    "type": "object",
                    "properties": {
                      "driver": {
                        "type": "string",
                        "const": "oauth2"
                      },
                      "realm": {
                        "type": "string"
                      },
                      "provider": {
                        "type": "string"
                      },
                      "client_id": {
                        "type": "string"
                      },
                      "client_secret": {
                        "type": "string"
                      },
                      "scopes": {
                        "type": "array",
                        "items": {
                          "type": "string"
                        }
                      }
                    },
                    "required": ["driver"],
                    "additionalProperties": false
                  },
                  {
                    "type": "object",
                    "properties": {
                      "driver": {
                        "type": "string",
                        "const": "oidc"
                      },
                      "realm": {
                        "type": "string"
                      },
                      "provider": {
                        "type": "string"
                      },
                      "client_id": {
                        "type": "string"
                      },
                      "client_secret": {
                        "type": "string"
                      },
                      "discovery_url": {
                        "type": "string"
                      },
                      "scopes": {
                        "type": "array",
                        "items": {
                          "type": "string"
                        }
                      }
                    },
                    "required": ["driver"],
                    "additionalProperties": false
                  }
                ]
              }
            },
            "identity_providers": {
              "type": "array",
              "items": {
                "anyOf": [
                  {
                    "type": "object",
                    "properties": {
                      "driver": {
                        "type": "string",
                        "const": "local"
                      },
                      "realm": {
                        "type": "string"
                      },
                      "path": {
                        "type": "string"
                      }
                    },
                    "required": ["driver", "path"],
                    "additionalProperties": false
                  },
                  {
                    "type": "object",
                    "properties": {
                      "driver": {
                        "type": "string",
                        "const": "ldap"
                      },
                      "realm": {
                        "type": "string"
                      },
                      "servers": {
                        "type": "array",
                        "items": {
                          "type": "object",
                          "properties": {
                            "address": {
                              "type": "string"
                            },
                            "port": {
                              "type": "integer",
                              "exclusiveMinimum": 0,
                              "maximum": 65535
                            }
                          },
                          "required": ["address"],
                          "additionalProperties": false
                        }
                      },
                      "bind_dn": {
                        "type": "string"
                      },
                      "bind_password": {
                        "type": "string"
                      },
                      "search_base_dn": {
                        "type": "string"
                      },
                      "search_filter": {
                        "type": "string"
                      }
                    },
                    "required": ["driver"],
                    "additionalProperties": false
                  },
                  {
                    "type": "object",
                    "properties": {
                      "driver": {
                        "type": "string",
                        "const": "oauth2"
                      },
                      "realm": {
                        "type": "string"
                      },
                      "provider": {
                        "type": "string"
                      },
                      "client_id": {
                        "type": "string"
                      },
                      "client_secret": {
                        "type": "string"
                      },
                      "scopes": {
                        "type": "array",
                        "items": {
                          "type": "string"
                        }
                      }
                    },
                    "required": ["driver"],
                    "additionalProperties": false
                  },
                  {
                    "type": "object",
                    "properties": {
                      "driver": {
                        "type": "string",
                        "const": "oidc"
                      },
                      "realm": {
                        "type": "string"
                      },
                      "provider": {
                        "type": "string"
                      },
                      "client_id": {
                        "type": "string"
                      },
                      "client_secret": {
                        "type": "string"
                      },
                      "discovery_url": {
                        "type": "string"
                      },
                      "scopes": {
                        "type": "array",
                        "items": {
                          "type": "string"
                        }
                      }
                    },
                    "required": ["driver"],
                    "additionalProperties": false
                  }
                ]
              }
            }
          },
          "additionalProperties": false
        },
        "secrets_managers": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "driver": {
                "type": "string"
              }
            },
            "required": ["driver"],
            "additionalProperties": true
          }
        }
      },
      "additionalProperties": false
    }
  }
}
