{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://asd-engineering.github.io/asd-caddy-api-client/schemas/caddy-handler-static-response.json",
  "title": "Caddy Handler Static Response",
  "description": "Caddy static response handler configuration",
  "$ref": "#/definitions/caddy-handler-static-response",
  "definitions": {
    "caddy-handler-static-response": {
      "type": "object",
      "properties": {
        "handler": {
          "type": "string",
          "const": "static_response"
        },
        "status_code": {
          "anyOf": [
            {
              "type": "integer",
              "minimum": 100,
              "maximum": 599
            },
            {
              "type": "string"
            }
          ]
        },
        "body": {
          "type": "string"
        },
        "headers": {
          "type": "object",
          "additionalProperties": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        },
        "close": {
          "type": "boolean"
        },
        "abort": {
          "type": "boolean"
        }
      },
      "required": ["handler"],
      "additionalProperties": false
    }
  }
}
