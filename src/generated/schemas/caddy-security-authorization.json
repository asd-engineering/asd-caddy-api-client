{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://asd-engineering.github.io/asd-caddy-api-client/schemas/caddy-security-authorization.json",
  "title": "Caddy Security Authorization",
  "description": "caddy-security authorization handler",
  "$ref": "#/definitions/caddy-security-authorization",
  "definitions": {
    "caddy-security-authorization": {
      "type": "object",
      "properties": {
        "handler": {
          "type": "string",
          "const": "authentication"
        },
        "providers": {
          "type": "object",
          "properties": {
            "authorizer": {
              "type": "object",
              "properties": {
                "gatekeeper_name": {
                  "type": "string"
                },
                "route_matcher": {
                  "type": "string"
                }
              },
              "additionalProperties": false
            }
          },
          "required": ["authorizer"],
          "additionalProperties": false
        }
      },
      "required": ["handler", "providers"],
      "additionalProperties": false
    }
  }
}
