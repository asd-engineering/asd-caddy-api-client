{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://asd-engineering.github.io/asd-caddy-api-client/schemas/caddy-security-identity-store.json",
  "title": "Caddy Security Identity Store",
  "description": "caddy-security identity store (local, LDAP, OAuth2, OIDC)",
  "$ref": "#/definitions/caddy-security-identity-store",
  "definitions": {
    "caddy-security-identity-store": {
      "anyOf": [
        {
          "type": "object",
          "properties": {
            "driver": {
              "type": "string",
              "const": "local"
            },
            "realm": {
              "type": "string"
            },
            "path": {
              "type": "string"
            }
          },
          "required": ["driver", "path"],
          "additionalProperties": false
        },
        {
          "type": "object",
          "properties": {
            "driver": {
              "type": "string",
              "const": "ldap"
            },
            "realm": {
              "type": "string"
            },
            "servers": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "address": {
                    "type": "string"
                  },
                  "port": {
                    "type": "integer",
                    "exclusiveMinimum": 0,
                    "maximum": 65535
                  }
                },
                "required": ["address"],
                "additionalProperties": false
              }
            },
            "bind_dn": {
              "type": "string"
            },
            "bind_password": {
              "type": "string"
            },
            "search_base_dn": {
              "type": "string"
            },
            "search_filter": {
              "type": "string"
            }
          },
          "required": ["driver"],
          "additionalProperties": false
        },
        {
          "type": "object",
          "properties": {
            "driver": {
              "type": "string",
              "const": "oauth2"
            },
            "realm": {
              "type": "string"
            },
            "provider": {
              "type": "string"
            },
            "client_id": {
              "type": "string"
            },
            "client_secret": {
              "type": "string"
            },
            "scopes": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          },
          "required": ["driver"],
          "additionalProperties": false
        },
        {
          "type": "object",
          "properties": {
            "driver": {
              "type": "string",
              "const": "oidc"
            },
            "realm": {
              "type": "string"
            },
            "provider": {
              "type": "string"
            },
            "client_id": {
              "type": "string"
            },
            "client_secret": {
              "type": "string"
            },
            "discovery_url": {
              "type": "string"
            },
            "scopes": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          },
          "required": ["driver"],
          "additionalProperties": false
        }
      ]
    }
  }
}
