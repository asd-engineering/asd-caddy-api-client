{
  "name": "@accelerated-software-development/caddy-api-client",
  "version": "0.4.0",
  "description": "TypeScript client for Caddy Admin API with MITMproxy integration",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./caddy": {
      "types": "./dist/caddy/index.d.ts",
      "import": "./dist/caddy/index.js",
      "require": "./dist/caddy/index.cjs"
    },
    "./mitm": {
      "types": "./dist/mitm/index.d.ts",
      "import": "./dist/mitm/index.js",
      "require": "./dist/mitm/index.cjs"
    },
    "./caddy-types": {
      "types": "./dist/caddy-types.d.ts",
      "import": "./dist/caddy-types.js",
      "require": "./dist/caddy-types.cjs"
    },
    "./plugins": {
      "types": "./dist/plugins/index.d.ts",
      "import": "./dist/plugins/index.js",
      "require": "./dist/plugins/index.cjs"
    },
    "./plugins/caddy-security": {
      "types": "./dist/plugins/caddy-security/index.d.ts",
      "import": "./dist/plugins/caddy-security/index.js",
      "require": "./dist/plugins/caddy-security/index.cjs"
    },
    "./extension-assets": {
      "types": "./dist/generated/extension-assets.d.ts",
      "import": "./dist/generated/extension-assets.js",
      "require": "./dist/generated/extension-assets.cjs"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run src/__tests__",
    "test:watch": "vitest watch",
    "test:coverage": "bun run test:coverage:unit && bun run test:coverage:integration && echo '\n================================================\nCoverage Reports Summary\n================================================\n' && echo 'Unit Test Coverage:       coverage/unit/index.html' && echo 'Integration Test Coverage: coverage/integration/index.html\n'",
    "test:coverage:unit": "echo '================================================\nRunning Unit Test Coverage\n================================================\n' && vitest run --coverage",
    "test:coverage:integration": "echo '\n================================================\nRunning Integration Tests (bun)\n================================================\n' && INTEGRATION_TEST=true bun test src/__tests__/integration/",
    "test:integration": "INTEGRATION_TEST=true bun test src/__tests__/integration/ --no-coverage",
    "test:playwright": "playwright test",
    "test:auth-types": "playwright test src/__tests__/playwright/",
    "test:oauth": "playwright test src/__tests__/playwright/oauth-flow.spec.ts",
    "test:oauth:enhanced": "playwright test src/__tests__/playwright/oauth-flow-enhanced.spec.ts",
    "docker:oauth:up": "docker compose -f tests/integration/docker-compose.oauth.yml up -d",
    "docker:oauth:down": "docker compose -f tests/integration/docker-compose.oauth.yml down",
    "test:keycloak": "playwright test src/__tests__/playwright/keycloak-oidc.spec.ts",
    "docker:keycloak:up": "docker compose -f tests/integration/docker-compose.keycloak.yml up -d",
    "docker:keycloak:down": "docker compose -f tests/integration/docker-compose.keycloak.yml down",
    "test:ldap": "playwright test src/__tests__/playwright/ldap-identity-store.spec.ts",
    "test:ldap:http": "playwright test src/__tests__/playwright/ldap-http-auth.spec.ts",
    "docker:ldap:up": "docker compose -f tests/integration/docker-compose.ldap.yml up -d",
    "docker:ldap:down": "docker compose -f tests/integration/docker-compose.ldap.yml down",
    "docker:caddy-security-ldap:up": "docker compose -f tests/integration/docker-compose.caddy-security-ldap.yml up -d --build",
    "docker:caddy-security-ldap:down": "docker compose -f tests/integration/docker-compose.caddy-security-ldap.yml down",
    "test:saml": "playwright test src/__tests__/playwright/saml-flow.spec.ts",
    "docker:saml:up": "docker compose -f tests/integration/docker-compose.saml.yml up -d",
    "docker:saml:down": "docker compose -f tests/integration/docker-compose.saml.yml down",
    "test:authentik": "playwright test src/__tests__/playwright/authentik-advanced.spec.ts",
    "docker:authentik:up": "docker compose -f tests/integration/docker-compose.authentik.yml up -d",
    "docker:authentik:down": "docker compose -f tests/integration/docker-compose.authentik.yml down -v",
    "test:caddy-security": "playwright test src/__tests__/playwright/caddy-security-portal.spec.ts",
    "test:oidc-flow": "playwright test src/__tests__/playwright/caddy-security-oidc-flow.spec.ts",
    "test:auth:security": "playwright test src/__tests__/playwright/auth-security-advanced.spec.ts",
    "test:auth:claims": "playwright test src/__tests__/playwright/auth-claims-injection.spec.ts",
    "docker:caddy-security:up": "docker compose -f tests/integration/docker-compose.caddy-security.yml up -d --build",
    "docker:caddy-security:down": "docker compose -f tests/integration/docker-compose.caddy-security.yml down",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --max-warnings=0",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "docs:build": "typedoc",
    "docs:serve": "typedoc && npx http-server docs/api -o",
    "release": "standard-version",
    "release:minor": "standard-version --release-as minor",
    "release:major": "standard-version --release-as major",
    "release:dry": "standard-version --dry-run",
    "release:first": "standard-version --first-release",
    "prerelease": "bun run build && bun run test && bun run typecheck && bun run lint",
    "verify:pack": "npm pack --dry-run",
    "verify:publish": "npm publish --dry-run",
    "prepare": "husky",
    "prepublishOnly": "bun run build && bun run test && bun run typecheck && bun run lint",
    "generate:types": "npx tsx scripts/generate-caddy-types.ts",
    "generate:plugin-types": "npx tsx scripts/generate-plugin-types.ts",
    "generate:extension": "npx tsx scripts/extract-metadata.ts",
    "generate:json-schemas": "npx tsx scripts/generate-json-schemas.ts",
    "generate:all": "npm run generate:types && npm run generate:plugin-types && npm run generate:extension && npm run generate:json-schemas",
    "sync:caddy": "git -C local/caddy pull && npm run generate:types",
    "sync:plugins": "git -C local/caddy-security pull && npm run generate:plugin-types",
    "sync:all": "npm run sync:caddy && npm run sync:plugins"
  },
  "keywords": [
    "caddy",
    "reverse-proxy",
    "tls",
    "mitmproxy",
    "api-client",
    "typescript"
  ],
  "author": "ASD Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/asd-engineering/asd-caddy-api-client.git"
  },
  "bugs": {
    "url": "https://github.com/asd-engineering/asd-caddy-api-client/issues"
  },
  "homepage": "https://asd-engineering.github.io/asd-caddy-api-client",
  "documentation": "https://asd-engineering.github.io/asd-caddy-api-client",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "peerDependencies": {
    "zod": "^3.22.0"
  },
  "peerDependenciesMeta": {
    "bcrypt": {
      "optional": true
    }
  },
  "devDependencies": {
    "@eslint/js": "^9.32.0",
    "@playwright/test": "^1.57.0",
    "@types/node": "^20.10.0",
    "@vitest/coverage-v8": "^1.0.0",
    "ajv": "^8.17.1",
    "bcryptjs": "^3.0.3",
    "eslint": "^9.32.0",
    "globals": "^15.12.0",
    "husky": "^9.1.6",
    "prettier": "^3.6.2",
    "standard-version": "^9.5.0",
    "ts-to-zod": "^5.1.0",
    "tsup": "^8.0.1",
    "typedoc": "^0.28.14",
    "typescript": "^5.3.3",
    "typescript-eslint": "^8.0.0",
    "vitest": "^1.0.0",
    "zod": "^3.22.4",
    "zod-to-json-schema": "^3.25.1"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@peculiar/x509": "^1.14.2"
  }
}
